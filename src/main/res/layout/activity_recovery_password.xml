<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:gravity="top|center"
    android:orientation="vertical">

    <ImageView
        android:layout_margin="12dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:padding="8dp"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:background="#f40404"
        android:text="Chọn câu hỏi bảo mật của bạn và đưa ra câu trả lời đúng để khôi phục" />

    <Spinner
        android:id="@+id/questionsSpinner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffff"
        android:layout_margin="12dp" />

    <EditText
        android:id="@+id/answer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textColorHint="#ffff"
        android:textSize="20sp"
        android:textColor="#ffff"
        android:hint="Nhập câu trả lời ở đây" />


    <Button
        android:id="@+id/confirmButton"
        android:layout_width="150dp"
        android:layout_height="48dp"
        android:layout_margin="32dp"
        android:text="Khôi phục"
        android:textSize="20dp"
        android:textColor="#ffff"
        android:background="#c981015b" />


</LinearLayout>
