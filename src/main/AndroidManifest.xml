<!--        </service>-->

        <activity
            android:name="ca.mimic.usagestatistics.Activity.Settings"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.NOTIFICATION_PREFERENCES" />
            </intent-filter>
        </activity>
        <activity
            android:name="ca.mimic.usagestatistics.Activity.Instructions"
            android:label="@string/instructions_title"
            android:parentActivityName="ca.mimic.usagestatistics.Activity.Settings"
            android:theme="@style/AppTheme">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ca.mimic.usagestatistics.Activity.Settings" />
        </activity>
        <activity android:name="ca.mimic.usagestatistics.Activity.AddApp"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".Activity.PasswordSetActivity"
            android:excludeFromRecents="true"
            android:screenOrientation="portrait"
            android:theme="@style/Base.Theme.AppCompat"/>

        <activity
            android:name=".Activity.PasswordSelectLock"
            android:excludeFromRecents="true"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            android:screenOrientation="portrait"/>
        <service
            android:name=".Services.AppCheckServices"
            android:exported="false" />
